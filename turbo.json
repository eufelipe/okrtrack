{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**", "out/**"],
      "inputs": [
        "src/**",
        "pages/**",
        "*.ts",
        "*.tsx",
        "*.js",
        "*.jsx",
        "*.mdx",
        "tsconfig*.json",
        "package.json",
        "next.config.*",
        "theme.config.*"
      ]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": [
        "src/**",
        "pages/**",
        "*.ts",
        "*.tsx",
        "*.js",
        "*.jsx",
        "*.mdx",
        "eslint.config.*",
        "tsconfig*.json",
        "package.json"
      ]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"],
      "inputs": ["src/**", "eslint.config.*", "tsconfig*.json", "package.json"],
      "cache": false
    },
    "format": {
      "inputs": ["src/**", ".prettierrc*", "package.json"],
      "cache": false
    },
    "format:check": {
      "inputs": ["src/**", ".prettierrc*", "package.json"]
    },
    "type-check": {
      "dependsOn": ["^type-check"],
      "inputs": [
        "src/**",
        "pages/**",
        "*.ts",
        "*.tsx",
        "*.js",
        "*.jsx",
        "*.mdx",
        "tsconfig*.json",
        "package.json",
        "next.config.*",
        "theme.config.*"
      ]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "inputs": [
        "src/**",
        "pages/**",
        "*.ts",
        "*.tsx",
        "*.js",
        "*.jsx",
        "*.mdx",
        "tsconfig*.json",
        "package.json",
        "next.config.*",
        "theme.config.*"
      ]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**",
        "tests/**",
        "vitest.config.*",
        "tsconfig*.json",
        "package.json"
      ]
    },
    "test:ci": {
      "dependsOn": ["^test"],
      "inputs": [
        "src/**",
        "tests/**",
        "vitest.config.*",
        "tsconfig*.json",
        "package.json"
      ]
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "inputs": [
        "src/**",
        "tests/**",
        "vitest.config.*",
        "tsconfig*.json",
        "package.json"
      ]
    },
    "clean": {
      "cache": false
    }
  }
}

#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸš€ Running pre-push checks..."

# Check if we're pushing to main/master (optional protection)
branch=$(git rev-parse --abbrev-ref HEAD)
protected_branch="main"

if [ "$branch" = "$protected_branch" ]; then
  echo "âš ï¸  Direct push to $protected_branch branch detected!"
  echo "ğŸ” Running full test suite..."
fi

# Type check all packages
echo "ğŸ”§ Type checking all packages..."
pnpm type-check

# Run tests for all packages
echo "ğŸ§ª Running tests..."
pnpm test

# Build all packages to ensure they compile
echo "ğŸ—ï¸  Building all packages..."
pnpm build

# Final lint check (in case someone bypassed pre-commit)
echo "ğŸ“ Final lint check..."
pnpm lint

echo "âœ… All pre-push checks passed! ğŸ‰"
#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run lint-staged for changed files
echo "📝 Checking and fixing linting issues..."
pnpm lint-staged

# Type check all packages (fast with Turbo cache)
echo "🔧 Type checking..."
pnpm type-check

echo "✅ Pre-commit checks passed!"